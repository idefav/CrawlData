                        //        intersect:false
                        //    },
                        //    tooltips: {
                        //        intersect: false
                        //    },
                        //    scales: {
                               
                        //        xAxes: [{
                        //            type: 'time',
                        //            time: {
                        //                unit: 'week',
                        //                month:'',
                        //                displayFormats: {
                        //                    month:'YYYY-MM',
                        //                    week: 'MM-DD',
